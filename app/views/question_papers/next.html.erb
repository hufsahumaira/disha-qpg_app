<% provide(:title, 'Next Page') %>
<% provide(:button_text, 'Create') %>

<h1>Create Question Paper</h1>


<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_tag(exam_paper_path, method: :get) do %>
      <%= label_tag :difficulty %>
      <%= select_tag "difficulty", raw("<option>easy</option><option>medium</option><option>hard</option>")  %>


      <%= label_tag :course %>
      <%= text_field_tag :course, params[:course] %>

      <%= submit_tag yield(:button_text), name: nil, class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
